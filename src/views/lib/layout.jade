doctype html
html(lang=lang)
  head
    title!= blog.title
    meta(charset='UTF-8')
    meta(content='width=device-width, minimum-scale=1.0, maximum-scale=1.0', name='viewport')
    link(rel='alternate', hreflang='ja', href=blog.url)
    link(rel='icon', type='image/png', href=image)
    link(rel='apple-touch-icon', href=image)
    link(rel='stylesheet', href='/css/index.css')

    // Google ウェブマスターツール
    //- meta(name='google-site-verification', content='#{webMasterTool}')

    // Google Analytics Tracking Code
    include analytics

    // OGP
    include ogp

    block head

  body
    include header

    block content

    script(src='/js/index.js')

    block scripts
